<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div>
    <p><strong><%= comment.username %> : <%= comment.body %></strong></p>
    <%= link_to "[x]", [comment.post, comment],
                method: :delete,
                data: {confirm: 'Are you sure?'},
                :class => 'btn btn-danger' %>
    <hr>
  </div>

<%end %>