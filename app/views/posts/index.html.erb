<h1>Blog Posts</h1>

<% @posts.each do |post| %>
  <div class="card" style="width: 18rem; margin-bottom: 10px; padding: 5px">
  <h3 class="card-header"><%= post.title %></h3>
  <p style="padding: 5px"><%= post.body %></p>
    <%= link_to "Read More", post_path(post), :class =>'btn btn-default' %>
  </div>

<% end %>